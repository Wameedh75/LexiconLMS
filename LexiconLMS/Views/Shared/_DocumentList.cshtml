@model IEnumerable<LexiconLMS.Models.Document>

<table class="table">
    <tr class="d-flex">
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th class="col-md-5">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th class="col-md-3"></th>
    </tr>

@foreach (var item in Model) {
    <tr class="d-flex">
        <td class="col-md-2 hideOverflow">
            <a href="@item.Url" target="_blank">
                @Html.DisplayFor(modelItem => item.FileName)
            </a>
        </td>
        <td class="col-md-5 hideOverflow">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td class="col-md-2">
            @Html.DisplayFor(modelItem => item.Deadline)
        </td>
        <td class="col-md-3">
            @if (Request.IsAuthenticated || User.IsInRole("teacher"))
            {
                @Html.ActionLink("Details", "Details", "Documents", new { id = item.Id }, new{@class = "btn btn-sm btn-info"}) <span></span>
            }
            @if (User.IsInRole("teacher"))
            {
                @Html.ActionLink("Edit", "Edit", "Documents", new { id = item.Id }, new {@class = "btn btn-sm btn-warning"}) <span></span>
                @Html.ActionLink("Delete", "Delete", "Documents", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
            }
        </td>
    </tr>
}

</table>
