@model LexiconLMS.ViewModels.MessagesListViewModel


@if (Model != null)
{
    @foreach (var item in Model.Messages)
    {
        <div class="container">
            <p>
                @item.User.FullName
            </p>
            <p>
                @item.Content
            </p>
            <span class="time-right">@item.Date.ToShortTimeString()</span>
        </div>
    }
}
<style>
    /* Chat containers */
    .container {
        border: 1px solid #dedede;
        background-color: #f1f1f1;
        border-radius: 1px;
        padding: 2px;
        margin: 2px 0;
        font-size: medium;
    }

    /* Darker chat container */
    .darker {
        border-color: #ccc;
        background-color: #ddd;
    }

    /* Clear floats */
    .container::after {
        content: "";
        clear: both;
        display: table;
    }

    /* Style images */
    .container img {
        float: left;
        max-width: 60px;
        width: 100%;
        margin-right: 20px;
        border-radius: 50%;
    }

        /* Style the right image */
        .container img.right {
            float: right;
            margin-left: 20px;
            margin-right: 0;
        }

    /* Style time text */
    .time-right {
        float: right;
        color: #aaa;
    }

    /* Style time text */
    .time-left {
        float: left;
        color: #999;
    }
</style>