@using System.Web.Mvc.Html
@model LexiconLMS.ViewModels.CourseVeiwModel


    <button class="accordion">

        <div class="container">
            <div class="row">
                <div class="col-md-9">@Html.DisplayFor(model => model.Name)</div>
                @if (User.IsInRole("teacher"))
                {

                    <div class=" col-md-3">

                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Details", "Details", new { id = Model.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })

                    </div>

                }
                else if (Request.IsAuthenticated)
                {
                    <div class="col-md-2"></div>
                    <div class="col-md-1">
                        @Html.ActionLink("Details", "Details", new { id = Model.Id }, new { @class = "btn btn-info" })
                    </div>
                }
            </div>
        </div>


    </button>
    <div class="panel">
        <div class="container">
            <table class="table">
                <tr class="d-flex">
                    <th class="col-md-2">
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th class="col-md-2">
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th class="col-md-8">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
                <tr class="d-flex">
                    <td class="col-md-2">
                        @Html.DisplayFor(model => model.StartDate)
                    </td>
                    <td class="col-md-2">
                        @Html.DisplayFor(model => model.EndDate)
                    </td>
                    <td class="col-md-8 breakWord hideOverflow">
                        @Html.DisplayFor(model => model.Description)
                    </td>
                </tr>
                <tr style="font-size: 18px; border: 0"></tr>
            </table>
        </div>
    </div>

