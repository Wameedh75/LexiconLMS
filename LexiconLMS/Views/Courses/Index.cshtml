@using System.Web.Mvc.Html
@model IEnumerable<LexiconLMS.ViewModels.CourseVeiwModel>

@{
    ViewBag.Title = "Index";
}

<h2>Courses</h2>
<div class="dl-horizontal">
<form class="form-inline md-form mr-auto mb-4">
    <input class="form-control" type="text" placeholder="contains" aria-label="Filter" name="filterString">
    <button class="btn btn-outline btn-rounded btn-primary my-0" type="submit">Filter</button>
</form>
</div>
<br/>
@if (User.IsInRole("teacher"))
{
    
        @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-primary" })
    
}

@foreach (var item in Model)
{

    <button class="accordion">

        <div class="container" >
            <div class="row">
                <div class="col-md-9">@Html.DisplayFor(modelItem => item.Name)</div>
                @if (User.IsInRole("teacher"))
                {

                    <div class=" col-md-3">

                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-warning"})
                        @Html.ActionLink("Details", "Details", new {id = item.Id}, new {@class = "btn btn-info"})
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})

                    </div>

                }
                else if (Request.IsAuthenticated)
                {
                    <div class="col-md-2"></div>
                    <div class="col-md-1">
                        @Html.ActionLink("Details", "Details", new {id = item.Id}, new {@class = "btn btn-info"})
                    </div>
                }
            </div>
        </div>


    </button>
    <div class="panel">
        <div class="container">
            <table class="table">
                    <tr  class="d-flex">
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th class="col-md-8">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th></th>
                    </tr>
                    <tr class="d-flex">
                        <td class="col-md-2">
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td class="col-md-2">
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td class="col-md-8 breakWord">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                    <tr style="font-size: 18px; border: 0"></tr>
                </table>
        </div>
        @*<div>
             @Html.Partial("_ModulesList", item)
        </div>*@
      </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/css")
}
<script type="text/javascript">
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            } else {
                panel.style.display = "block";
            }
        });
    }
</script>
