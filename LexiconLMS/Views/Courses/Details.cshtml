@model LexiconLMS.Models.Course

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div class="row">
    <div class="col-md-6">
        <div>
            <h4>Course</h4>
            @if (User.IsInRole("teacher"))

            {

                @Html.ActionLink("Add new module", "CreateModoule", new { courseId = Model.Id })
                <span>
                    |
                </span>
            }

            <span>
                @Html.ActionLink("Module list", "Index", "Modules", new { courseId = Model.Id }, null)
            </span>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="breakWord">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>

        @if (User.IsInRole("teacher"))
        {
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
                <span>|</span>
                @Html.ActionLink("Back to List", "Index")
            </p>
        }
    </div>

    <div class="col-md-6">
        @Html.Partial("_StudentOfCourse", Model.CourseStudents)
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h4>Modules</h4>
        @foreach (var item in Model.CourseModules)
        {
            <p>
                @Html.DisplayFor(model => item.Name)
            </p>
        }
    </div>
    <div class="col-md-6">
        <p>
            @Html.ActionLink("Add document", "AddDocument", new { id = Model.Id })
        </p>
        @Html.Partial("_DocumentList", Model.Documents)
    </div>
</div>

